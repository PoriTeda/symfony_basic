{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category Details</h1>

    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
        </tbody>
    </table>




    <div class="d-flex mr-1 my-3">

        <a href="{{ path('category_index') }}" class="btn btn-primary mr-3">Back to list</a>

        <a href="{{ path('category_edit', {'id': category.id}) }}"  class="btn btn-info mr-3">Edit</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
