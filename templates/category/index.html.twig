{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}

    <div class="d-flex justify-content-between align-items-center">
    <h1>Category index</h1>
    <a href="{{ path('category_new') }}"><i class="fa fa-plus fa-2x text-success" aria-hidden="true"></i></a>
    </div>

    <table class="table table-striped table-bordered table-hover ">
        <thead>
            <tr class="thead-dark">
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <th>{{ category.id }}</th>
                <th>{{ category.name }}</th>
                <td>{{ category.slug }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn mx-3"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
