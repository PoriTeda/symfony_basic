{% extends 'base.html.twig' %}
{% block title %}Symfony Articles{% endblock %}
{% block body %}

    <div class="d-flex justify-content-between align-items-center">
        <h1>Articles</h1>
        <a href="{{ path('article_new') }}"><i class="fa fa-plus fa-2x text-success" aria-hidden="true"></i></a>
    </div>
    {% if articles %}
        <table id="articles" class="table table-striped table-bordered table-hover ">
            <thead>
            <tr class="thead-dark">
                <th scope="col">Article Title</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <th scope="row">{{ article.title }}</th>
                    <td scope="row">
                        <a href="{{ path('article_show',{id : article.id}) }}" class="btn"><i class="fa fa-eye" aria-hidden="true"></i></a>
                        <a href="{{ path('article_edit',{id : article.id}) }}" class="btn"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        <a href="#" class="btn delete-article"
                           data-id="{{ article.id }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No Artilce to display</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
