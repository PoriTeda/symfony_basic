{% extends 'base.html.twig' %}
{% block title %}Symfony Articles{% endblock %}
{% block body %}
    {% if articles %}
        <table id="articles" class="table">
            <thead>
            <tr>
                <td>Article Title</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="{{ path('article_show',{id : article.id}) }}" class="btn btn-dark">Show</a>
                        <a href="{{ path('article_edit',{id : article.id}) }}" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger delete-article"
                           data-id="{{ article.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No Artilce to display</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
