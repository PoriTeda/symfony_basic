{% extends 'base.html.twig' %}
{% block title %}{{article.title}}{% endblock %}
{% block body %}
    <h1>Article Details</h1>
    <table class="table table-striped table-bordered table-hover">
        <tbody>
        <tr>
            <th>Title</th>
            <td>{{ article.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ article.body }}</td>
        </tr>
        </tbody>
    </table>
    <div class="d-flex mr-1 my-3">

        <a href="{{ path('article_list') }}" class="btn btn-primary mr-3">Back to list</a>

        <a href="{{ path('article_edit', {'id': article.id}) }}"  class="btn btn-info mr-3">Edit</a>

    </div>
{% endblock %}
